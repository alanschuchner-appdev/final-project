<h1>
  All fields
</h1>

<a href="/fields/new">
  Add a new field
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Venue
    </th>

    <th>
      Name
    </th>

    <th>
      Price
    </th>

    <th>
      Capacity
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @fields.each do |field| %>
  <tr>
    <td>
      <%= field.id %>
    </td>

    <td>
      <%= Venue.find(field.venue_id).name %>
    </td>

    <td>
      <%= field.name %>
    </td>

    <td>
      $<%= field.price %>
    </td>

    <td>
      <%= field.capacity %> people
    </td>

    <td>
      <%= time_ago_in_words(field.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(field.updated_at) %> ago
    </td>

    <td>
      <a href="/fields/<%= field.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
