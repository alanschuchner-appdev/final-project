<h1>
  All matches
</h1>

<a href="/matches/new">
  Add a new match
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Home score
    </th>

    <th>
      Visitor score
    </th>

    <th>
      Booking
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @matches.each do |match| %>
  <tr>
    <td>
      <%= match.id %>
    </td>

    <td>
      <%= match.home_score %>
    </td>

    <td>
      <%= match.visitor_score %>
    </td>

    <td>
      <%= match.booking_id %>
    </td>

    <td>
      <%= time_ago_in_words(match.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(match.updated_at) %> ago
    </td>

    <td>
      <a href="/matches/<%= match.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
