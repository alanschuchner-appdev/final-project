<!-- Validation failure messages -->
<% if @rating.errors.any? %>
  <% @rating.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit rating #<%= @rating.id %>
</h1>

<hr>

<form action="/update_rating/<%= @rating.id %>" method="post">
  <!-- Label and input for rating -->
  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @rating.rating %>">
  </div>

  <!-- Label and input for player_id -->
  <div class="form-group">
    <label for="player_id">
      Player
    </label>

    <input type="text" id="player_id" name="player_id" class="form-control" value="<%= @rating.player_id %>">
  </div>

  <!-- Label and input for venue_id -->
  <div class="form-group">
    <label for="venue_id">
      Venue
    </label>

    <input type="text" id="venue_id" name="venue_id" class="form-control" value="<%= @rating.venue_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update rating
  </button>
</form>

<hr>

<a href="/ratings">
  Go back
</a>
