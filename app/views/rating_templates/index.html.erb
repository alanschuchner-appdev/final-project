<h1>
  All ratings
</h1>

<a href="/ratings/new">
  Add a new rating
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Rating
    </th>

    <th>
      Player
    </th>

    <th>
      Venue
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @ratings.each do |rating| %>
  <tr>
    <td>
      <%= rating.id %>
    </td>

    <td>
      <%= rating.rating %>
    </td>

    <td>
      <%= rating.player_id %>
    </td>

    <td>
      <%= rating.venue_id %>
    </td>

    <td>
      <%= time_ago_in_words(rating.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(rating.updated_at) %> ago
    </td>

    <td>
      <a href="/ratings/<%= rating.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
